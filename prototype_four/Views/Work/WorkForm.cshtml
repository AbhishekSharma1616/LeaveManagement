@model prototype_four.ViewModels.WorkViewModel
@{
    ViewBag.Title = "WorkForm";
}


<h2>Work Details</h2>
<hr />


@using (@Html.BeginForm("Save", "Work"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Work.WorkName)
        @Html.TextBoxFor(m => m.Work.WorkName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Work.Description)
        @Html.TextBoxFor(m => m.Work.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Work.TeamId)
        @Html.DropDownListFor(m => m.Work.TeamId, new SelectList(Model.Team, "TeamId", "TeamName"), "Select Team", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Work.WorkId)

    var c = Model.Work.WorkId > 0 ? "Update" : "Save";
    <button type="submit" class="btn btn-primary">@c</button>
}